<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical"
    tools:context=".AdminUpdate">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_32x"
        android:layout_marginTop="@dimen/dimen_32x"
        android:layout_marginRight="@dimen/dimen_32x"
        android:gravity="center"
        android:text="UPDATE NOTICE"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_48x"
        android:layout_marginTop="@dimen/dimen_32x"
        android:layout_marginRight="@dimen/dimen_48x"
        android:layout_marginBottom="@dimen/dimen_32x"
        android:ems="10"
        android:hint="Enter Notice Here"
        android:inputType="textMultiLine"
        android:lines="4"
        android:textColorHint="@color/colorPrimary" />



    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:paddingLeft="@dimen/dimen_64x"
        android:paddingTop="@dimen/dimen_16x"
        android:paddingRight="@dimen/dimen_64x"
        android:text="Select Cell"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_64x"
        android:dropDownWidth="wrap_content"
        android:paddingLeft="@dimen/dimen_64x"
        android:paddingTop="@dimen/dimen_16x"
        android:paddingRight="@dimen/dimen_64x"
        android:spinnerMode="dialog" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/but_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_64x"
        android:layout_marginTop="@dimen/dimen_64x"
        android:layout_marginRight="@dimen/dimen_64x"
        android:layout_marginBottom="@dimen/dimen_16x"
        android:background="@drawable/signup_button"
        android:gravity="center"
        android:text="Add Notice"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/butDel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_64x"
        android:layout_marginTop="@dimen/dimen_32x"
        android:layout_marginRight="@dimen/dimen_64x"
        android:layout_marginBottom="@dimen/dimen_16x"
        android:background="@drawable/signup_button"
        android:gravity="center"
        android:text="Delete All Previous Notices"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
</ScrollView>